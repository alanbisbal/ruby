<h1> <%= @note.book %> > <%= @note.title %> </h1>
<%= form_for(@note) do |form| %>
<div>
    <%= form.label :title, "Title:",{class:"card-title"} %><br>
    <%= form.text_field :title ,{disabled:true}%><br>
</div>
<div>
  <%= form.label :content, "Content:" %><br>
  <%= form.text_area :content,{class:"md-textarea form-control",rows:16, disabled:true} %>
</div>
<% end %>
<%= link_to "Edit", edit_note_path(@note) %>
<%= link_to "Destroy", @note, method: :delete, data: { confirm: "Are you sure?" } %>

<%= link_to "Export Note in PDF", download_note_path(:note_id => @note.id) %>
<%= markdown(@note.content) %>
