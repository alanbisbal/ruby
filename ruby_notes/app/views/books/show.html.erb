<div>
<h1> <%= @book.title %> </h1>
 <h3>  <%= link_to "New Note", new_note_path %> </h3>
</div>


<%= link_to 'Export all to PDF',download_path(:book_id => @book.id, :type => "Book"), :target => '_blank' %>


<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= link_to "Show", note %> </td>
        <td><%= link_to "Edit", edit_note_path(note) %> </td>
        <td><%= link_to "Destroy", note, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
