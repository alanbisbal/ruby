<div>
  <h1>Your Books</h1>

  <h3>
  <%= link_to "New book", new_book_path %>
  </h3>
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to "#{book.title}", book %></td>
        <% if not book.title == "Global" %>
        <td><%= link_to "Edit", edit_book_path(book) ,class: "btn btn-warning"%></td>

        <td><%= link_to "Destroy", book, method: :delete, data: { confirm: "Are you sure? All notes will be deleted" },class: "btn btn-danger" %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
